generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shopkeeper {
  id        String    @id @default(cuid())
  name      String
  phone     String    @unique
  shopName  String
  shopNumber String?
  products  Product[]
  orders    Order[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  title       String
  description String?
  price       Float
  category    String
  imageUrl    String?
  shopkeeperId String
  shopkeeper  Shopkeeper @relation(fields: [shopkeeperId], references: [id], onDelete: Cascade)
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id              String   @id @default(cuid())
  buyerName       String
  buyerPhone      String
  buyerAddress    String
  totalAmount     Float
  paymentMethod   String   @default("cod") // cod = Cash on Delivery
  status          String   @default("pending") // pending, confirmed, delivered, cancelled, rejected
  shopkeeperId   String?
  shopkeeper      Shopkeeper? @relation(fields: [shopkeeperId], references: [id])
  orderItems      OrderItem[]
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt()
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  quantity  Int
  price     Float
  createdAt DateTime @default(now())
}
